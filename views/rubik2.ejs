<!DOCTYPE html>
<html>
  <head>
    <title>Space Rubik</title>
    
    <link rel="stylesheet" href="styles/general.css">
    <link rel="stylesheet" href="styles/header.css">
    <link rel="stylesheet" href="styles/product.css">
      
  </head>
  <body>
    <div class="header">
      
      <div class="left-section">
        <img class="logo" src="picture/Picture1.png">
      </div>

      <div class="middle-section">
        <div class="search-container">
          <input class="search-bar" type="text" placeholder="Tìm kiếm sản phẩm">
          <button class="search-button js-search-button">Search</button>
      </div>
        <div class="lienhe">
          <p class="sdt">0961126728</p>
          <p class="hotline">Hotline bán hàng</p>
        </div>
      </div>

      <div class="right-section">
        <% if (userName) { %>
          <p class="login">Hello <%= userName %> (<a href="/logout" style="color: white;">Logout</a>)</p>
        <% } else { %>
          <p class="login"><a href="/signup" style="color: white;">Đăng ký</a>/<a href="/login" style="color: white;">Đăng nhập</a></p>
        <% } %>
        <a href="checkout" style="text-decoration: none;">
          <p class="gio-hang">Giỏ hàng</p>
        </a>
        <a href="checkout">
          <div class="cart-container">
            <img class="cart-icon" src="icon/cart.png">
            <div class="notification js-notification"><%= totalQuantity %></div>
          </div>
        </a>
      </div>

    </div>

    


    <div class="product-container">
      <div class="rubik-type">
        <p>RUBIK CƠ BẢN</p>
      </div>
      <div class="product js-product1" id="all-products">
        <% cubes.forEach(cube => { %>
          <div class="rubik-product">
            <img class="rubik-picture" src="<%= cube.image %>">
            <p class="product-name"><%= cube.name %></p>
            <p class="price"><%= (cube.price/1000).toFixed(3) %>đ</p>
            <button class="purchase-button js-add-to-cart" data-product-name="<%= cube.name %>" data-product-image="<%= cube.image %>" data-product-price="<%= cube.price %>" data-product-id="<%= cube.id %>">Thêm Vào Giỏ Hàng</button>
          </div>
        <% }); %>
      </div>
    </div>

    <div class="product-container">
      <div class="rubik-type">
        <p>RUBIK BIẾN THỂ</p>
      </div>
      <div class="product js-product2" id="all-products">
